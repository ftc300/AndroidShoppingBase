<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/item_main_recommand_list_layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="9.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="3.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/dialog_background"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/item_main_recommand_list_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_product_item_bg"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/item_main_recommand_list_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9.0dip"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_marginTop="12.0dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="2"
            android:textColor="#ff6e6e6e"
            android:textSize="14.0dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip" >

            <TextView
                android:id="@+id/item_main_recommand_list_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="18.0dip" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_line_width"
        android:layout_height="match_parent"
        android:background="#f1f1f1" />

    <LinearLayout
        android:id="@+id/item_main_recommand_list_layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="9.0dip"
        android:layout_marginTop="3.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/dialog_background"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/item_main_recommand_list_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_product_item_bg"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/item_main_recommand_list_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9.0dip"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_marginTop="12.0dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="2"
            android:textColor="#ff6e6e6e"
            android:textSize="14.0dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip" >

            <TextView
                android:id="@+id/item_main_recommand_list_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="18.0dip" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>