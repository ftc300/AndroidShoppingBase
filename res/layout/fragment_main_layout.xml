<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
	<LinearLayout
	    android:id="@+id/fragment_main_menu_layout" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#ff0000"
	    android:layout_alignParentBottom="true">

		<Button
		    android:id="@+id/fragment_home_menu_btn"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="首页" />
		<Button
		    android:id="@+id/fragment_catagory_menu_btn"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="分类" />
		<Button
		    android:id="@+id/fragment_shopping_cart_menu_btn"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="购物车" />
		<Button
		    android:id="@+id/fragment_my_shopping_menu_btn"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="我的" />
		<Button
		    android:id="@+id/fragment_more_menu_btn"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="更多" />
	</LinearLayout>
	<FrameLayout
	    android:id="@+id/fragment_main_content_layout" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@id/fragment_main_menu_layout">
	</FrameLayout>
</RelativeLayout>